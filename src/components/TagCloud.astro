---
// src/components/TagCloud.astro

import { slugify } from "../utils/blogutils";

const { tags } = Astro.props;
---

<ul class="flex gap-1 ps-0 pl-0 not-prose">
    {tags.map(tag => (
      <li class="list-none items-start flex-initial" key={tag}>
        <a href={`/tags/${slugify(tag)}/`} class="bg-blue-100 text-blue-700 hover:bg-blue-200 px-3 py-2 rounded-full transition-colors duration-300 ease-in-out">
          #{tag}
        </a>
      </li>
    ))}
  </ul>
  
  
