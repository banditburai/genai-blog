---
// component imports
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages" class="flex gap-2">
  {
    prevUrl && (
      <Link
        text="Previous"
        href={prevUrl}
        style="primary"
        classes="text-gray-800 dark:text-gray-300"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-left-line",
          side: "left",
        }}
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="Next"
        href={nextUrl}
        classes="text-gray-800 dark:text-gray-300"
        style="primary"       
        borderVisible={true}        
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-right-line",
          side: "right",
        }}
      />
    )
  }
</nav>